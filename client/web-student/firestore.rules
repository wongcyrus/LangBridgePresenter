rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow students to read the broadcast data
    match /presentation_broadcast/{courseId} {
      allow read: if true;
      allow write: if false;
      
      // Allow reading the presentation list
      match /presentations/{pptId} {
        allow read: if true;
        
        // Explicitly allow reading from the new slide registry structure
        match /slides/{slideId} {
           allow read: if true;
           allow write: if false;
        }
      }
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}